<!-- login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <style>
     body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            animation: backgroundAnimation 30s infinite linear; /* Background animation */
        }

        @keyframes backgroundAnimation {
            0% { background-color: #62c2cc; }
            20% { background-color: #f78fb3; }
            40% { background-color: #fad961; }
            60% { background-color: #7cf2cf; }
            80% { background-color: #a0d468; }
            100% { background-color: #62c2cc; }
        }
    .login-container {
      background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent background */
      border-radius: 15px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* Soft shadow */
      padding: 50px;
      width: 400px; /* Adjusted width */
      display: flex;
      flex-direction: column;
      align-items: center;
      backdrop-filter: blur(10px); /* Frosted glass effect */
    }

    input[type="text"],
    input[type="password"],
    button {
      width: calc(100% - 22px); /* Adjusting width to account for padding and borders */
      margin-bottom: 15px;
      padding: 10px;
      border: 1px solid #7a6e6e;
      border-radius: 4px;
      box-sizing: border-box;
      font-size: 16px;
      background-color: rgba(204, 200, 218, 0.9); /* Matte and transparent background for inputs */
    }

    button {
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease; /* Smooth transition on hover */
    }

    button:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <div class="login-container">
    

    <form action="/user/login" method="POST">
      <input type="text" name="email" placeholder="Email" required>
      <input type="password" name="password" placeholder="Password" required>
      <button type="submit">Login</button>
    </form>
  </div>
</body>
</html>
